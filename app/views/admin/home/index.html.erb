      <th>Data de publicação</th> 
      <th>Ações</th> 
  </tr> 
</thead> 
<tbody> 
  <% @posts.each do |post| %>
  <tr> 
        <td><input type="checkbox"></td> 
      <td><%= post.title %></td> 
      <td>
        <% post.post_categories.each do |post_category| %>
          <%= post_category.category.name %><br />
        <% end %>
      </td> 
      <td><%= post.published_date.strftime("%d/%m/%Y %l:%M") %></td> 
      <td><input type="image" src="images/admin/icn_edit.png" title="Edit"><input type="image" src="images/admin/icn_trash.png" title="Trash"></td> 
  </tr> 
  <% end %>
</tbody> 
</table>
