<article class="module width_full">
<header><h3 class="tabs_involved">Últimos Conteúdos</h3>
<ul class="tabs">
  <li><a href="#tab1">Comentários</a></li>
  <li><a href="#tab2">Posts</a></li>
  <li><a href="#tab3">Projetos</a></li>
</ul>
</header>

<div class="tab_container">

<div id="tab1" class="tab_content">
<table class="tablesorter" cellspacing="0"> 
<thead> 
  <tr> 
        <th></th> 
      <th>Comentário</th> 
      <th>Post</th>
      <th>Autor</th> 
      <th>Data</th> 
      <th>Ações</th> 
  </tr> 
</thead> 
<tbody>
  <% @comments.each do |comment| %> 
  <tr> 
        <td><input type="checkbox"></td> 
      <td><%= sanitize comment.body, :tags => %w(strong em code a br) %></td> 
      <td><%= comment.post.title %></td>
      <td><%= comment.author %></td> 
      <td><%= comment.created_at.strftime("%d/%m/%Y %l:%M") %></td> 
      <td><input type="image" src="images/admin/icn_edit.png" title="Edit"><input type="image" src="images/admin/icn_trash.png" title="Trash"></td> 
  </tr> 
  <% end %>
  
</tbody> 
</table>

</div><!-- end of #tab1 -->

